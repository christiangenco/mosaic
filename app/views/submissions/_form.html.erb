<%= bootstrap_form_for([challenge, submission]) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  <%=
    f.url_field :url,
      hide_label: true,
      placeholder: "Solution URL",
      prepend: f.check_box(:is_private, label: "Private"),
      append: f.submit("Send", class: 'btn btn-info')
  %>
