<div class="row">
  <div class="panel panel-default col-md-4 col-md-offset-4">
    <div class="panel-body">
      <h2 style="margin-top: 0;">Create account</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <%= f.text_field :name, autofocus: true, label: "Your name" %>
        <%= f.text_field :username, label: "Username" %>
        <%= f.email_field :email %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "at least 6 characters" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", label: "Password again" %>
        <%= f.submit "Sign up", class: "btn btn-block btn-info" %>

        <hr />
        Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
