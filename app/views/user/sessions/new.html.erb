<div class="row">
  <div class="panel panel-default col-md-4 col-md-offset-4">
    <div class="panel-body">
      <h2 style="margin-top: 0;">Sign in</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%# devise_error_messages! %>

        <%= f.email_field :email, autofocus: true %>
        <%= f.password_field :password, autocomplete: "off", help: link_to("Forgot?", new_password_path(resource_name)) %>
        <%= f.submit "Sign in", class: "btn btn-block btn-info" %>

        <hr />
        Need an account? <%= link_to "Create new account", new_registration_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
